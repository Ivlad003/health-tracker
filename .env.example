# Health Tracker Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# TELEGRAM
# =============================================================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# =============================================================================
# FATSECRET API
# =============================================================================
# Register at: https://platform.fatsecret.com/register
FATSECRET_CLIENT_ID=
FATSECRET_CLIENT_SECRET=

# =============================================================================
# WHOOP API
# =============================================================================
# Register at: https://developer.whoop.com
WHOOP_CLIENT_ID=
WHOOP_CLIENT_SECRET=
WHOOP_REDIRECT_URI=https://your-domain.com/whoop/callback

# =============================================================================
# OPENAI
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/healthlog

# =============================================================================
# N8N (if self-hosted)
# =============================================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# FATSECRET OAUTH 1.0 (for user food diary access)
# =============================================================================
# Shared Secret (different from Client Secret!) â€” from FatSecret API key page
FATSECRET_SHARED_SECRET=

# =============================================================================
# APP SETTINGS
# =============================================================================
APP_BASE_URL=https://your-domain.com
LOG_LEVEL=INFO
